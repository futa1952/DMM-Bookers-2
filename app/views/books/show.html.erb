<body>
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <div class="user-info row">
          <h2>User info</h2>
          <% if current_user %>
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg" %>
          <% if @user.id == current_user.id %>
          <table class="table">
            <tbody>
              <tr></tr>
              <tr>
                <th>name</th>
                <th>
                  <p class="profile-name"><%= @user.name %></p>
                </th>
              </tr>
              <tr>
                <th>introduction</th>
                <th>
                  <p class="introduction"><%= @user.introduction %></p>
                </th>
              </tr>
            </tbody>
          </table>
          <div class="row">
            <%= link_to"",edit_user_path(@user.id), class: "glyphicon glyphicon-wrench btn btn-default col-xs-11" %>
          </div>
          <% end %>
        </div>
        <% end %>
        <div class="new-book row">
          <h2>New book</h2>
          <%= form_for (@book) do |f| %>
          <div><%= f.label :title, "Title"%></div>
          <%= f.text_field :title, class: "col-xs-12"%>
          <div><%= f.label :body, "Opinion"%></div>
          <%= f.text_area :body, class: "col-xs-12" %>
          <%= f.submit "Create Book", class: "btn btn-primary btn-create col-xs-12" %>
          <% end %>
        </div>
      </div>
      <div class="col-xs-9">
        <h2>Book detail</h2>
        <table class="table table-hover table-inverse">
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg",size:'50x50',format: 'no_image.jpg' %>
              <nav>
                <%= @book.user.name %>
              </nav>
              <% end %>
            </td>
            <td><%= link_to @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user_id == current_user.id %>
            <td><%= link_to"edit", edit_book_path(@book.id),class:"btn-sm btn-success" %></td>
            <td><%= link_to "destroy", book_path(@book.id), class:"btn-sm btn-danger destroy(@book.id)", method: :delete,data: {confirm: "削除しますか？"} %></td>
            <% end %>
          </tr>
        </table>
      </div>
    </div>
  </div>
</body>
<body>
  <div class="container">
    <% if flash[:notice] %>
    <div class="alert alert-success"><%= flash[:notice] %></div>
    <% end %>
    <% if flash[:uppdate] %>
    <div class="alert alert-success"><%= flash[:update] %></div>
    <% end %>
    <% if @book.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <p class="error"><%= @book.errors.count %>errors prohibited this book from being saved:</p>
        <% @book.errors.full_messages.each do |msg| %>
        <p class="error"><%= msg %></p>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="row">
      <div class="col-xs-3">
        <div class="user-info row">
          <% if current_user %>
          <div class="profile-container">
            <h2>User Info</h2>
            <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
            <table class="table">
              <tbody>
                <tr></tr>
                <tr>
                  <th>name</th>
                  <th>
                    <p class="profile-name"><%= @user.name %></p>
                  </th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th>
                    <p class="introduction"><%= @user.introduction %></p>
                  </th>
                </tr>
              </tbody>
            </table>
            <div class="row">
              <%= link_to"",edit_user_path(@user.id), class: "glyphicon glyphicon-wrench btn btn-default col-xs-11" %>
            </div>
          </div>
          <% end %>
        </div>
        <div class="new-book row">
          <h2>New book</h2>
          <%= form_for (@book) do |f| %>
          <div class="field">
            <%= f.label :title, "Title"%>
            <%= f.text_field :title, class: "col-xs-12"%>
          </div>
          <div class="field">
            <%= f.label :body, "Opinion"%>
            <%= f.text_area :body, class: "col-xs-12" %>
          </div>

          <%= f.submit "Create Book", class: "btn btn-primary btn-create col-xs-12" %>
          <% end %>
        </div>
      </div>
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th> Title </th>
              <th> Opinion </th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @books.each do |book| %>
          <tbody>
            <tr>
              <td><%= link_to user_path(book.user_id) do %>
                <%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg",format: 'no_image.jpg', size: "40x40"  %></td>
              <% end %>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</body>
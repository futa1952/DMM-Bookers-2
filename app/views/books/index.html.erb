<body>
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <div class="user-info row">
          <% if current_user %>
          <div class="profile-container">
            <h2>User Info</h2>
            <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %>
            <table class="table">
              <tbody>
                <tr></tr>
                <tr>
                  <th>name</th>
                  <th>
                    <p class="profile-name"><%= @user.name %></p>
                  </th>
                </tr>
                <tr>
                  <th>introduction</th>
                  <th>
                    <p class="introduction"><%= @user.introduction %></p>
                  </th>
                </tr>
              </tbody>
            </table>
            <div class="row">
              <%= link_to"",edit_user_path(@user.id), class: "glyphicon glyphicon-wrench btn btn-default col-xs-11" %>
            </div>
          </div>
          <% end %>
        </div>
        <div class="new-book row">
          <h1>New book</h1>
          <%= form_for (@book) do |f| %>
          <div><%= f.label :title, "Title"%></div>
          <%= f.text_field :title, class: "col-xs-12"%>
          <div><%= f.label :body, "Opinion"%></div>
          <%= f.text_area :body, class: "col-xs-12" %>

          <%= f.submit "Create Book", class: "btn btn-primary col-xs-12" %>
          <% end %>
        </div>
      </div>
      <div class="col-xs-9">
        <h1>Books</h1>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th> Title </th>
              <th> Opinion </th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @books.each do |book| %>
          <tbody>
            <tr>
              <td> <%= book.title %> </td>
              <td> <%= book.body %></td>
              <td> <%= link_to 'Show', book_path(book.id) %> </td>
              <td> <%= link_to 'Edit', edit_book_path(book.id) %></td>
              <td> <%= link_to 'Destroy', book_path(book.id), method: :delete, 'data-confirm' => 'Are you sure?' %> </td>
            </tr>
          </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</body>
<body>
  <div class="container">
    <div class="row">
      <div class="center-block" style="width: 50%">
        <h1>Editing Book</h1>
        <% if @book.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <p class="error"><%= @book.errors.count %>errors prohibited this book from being saved:</p>
            <% @book.errors.full_messages.each do |msg| %>
            <p class="error"><%= msg %></p>
            <% end %>
          </ul>
        </div>
        <% end %>
        <%= form_for(@book, url: book_path(@book.id)) do |f| %>
        <h5>Title</h5>
        <%= f.text_field :title,class:"col-xs-12" %>
        <h5>Opinion</h5>
        <%= f.text_area :body,class:"col-xs-12" %>
        <nav>
          <%= f.submit 'Update Book',class: "col-xs-12 btn btn-primary" %>
        </nav>
        <%= link_to "Show",book_path(@book)%>
        <span>|</span>
        <%= link_to "Back",books_path %>
        <% end %>
      </div>
    </div>
  </div>
</body>
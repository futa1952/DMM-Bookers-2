<!DOCTYPE html>
<html>

<head>
  <title>Bookers</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <nav class='nav navbar-nav navbar-left'>
        <h3 class="b">Bookers</h3>
      </nav>
      <div id="slidemenu">
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
          <li class="">
            <%= link_to 'home', user_path(current_user.id), class: 'glyphicon glyphicon-home'%>
          </li>
          <li class="">
            <%= link_to 'Users', "/users", class: "glyphicon glyphicon-user" %>
          </li>
          <li class="">
            <%= link_to 'Books', "/books", class: "glyphicon glyphicon-book" %>
          </li>
          <li class="">
            <%= link_to "logout",  destroy_user_session_path, class: " glyphicon  glyphicon-log-out", method: :delete %>
          </li>
          <% else %>
          <li class="">
            <%= link_to "Home", root_path, class: 'glyphicon glyphicon-home icon' %>
          </li>
          <li class="">
            <%= link_to "About", books_about_path,class:"glyphicon glyphicon-link"%>
          </li>
          <li class="">
            <%= link_to "sign up", new_user_registration_path, class:"glyphicon glyphicon-edit sign_up" %>
          </li>
          <li class="">
            <%= link_to "login", new_user_session_path, class:"glyphicon glyphicon-log-in" %>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </header>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= yield %>
  <footer>
    <div class="container">
      <div class="pull-right">CopyRight Infratop.inc</div>
    </div>
  </footer>
</body>

</html>
<!DOCTYPE html>
<html>

<head>
  <title>Bookers</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
      <nav class='nav navbar-nav navbar-left'>
        <h3 class="b">Bookers</h3>
      </nav>
      <div id="slidemenu">
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
          <li>
            <%= link_to 'Home', user_path(current_user), class: 'glyphicon glyphicon-home'%>
          </li>
          <li>
            <%= link_to 'Users', "/users", class: "glyphicon glyphicon-user" %>
          </li>
          <li>
            <%= link_to 'Books', "/books", class: "glyphicon glyphicon-book" %>
          </li>
          <li>
            <%= link_to "logout",  destroy_user_session_path, class: " glyphicon glyphicon-log-out", method: :delete %>
          </li>
          <% else %>
          <li>
            <%= link_to "Home", root_path, class: 'glyphicon glyphicon-home icon' %>
          </li>
          <li>
            <%= link_to "About", home_about_path ,class:"glyphicon glyphicon-link"%>
          </li>
          <li>
            <%= link_to "sign up", new_user_registration_path, class:"glyphicon glyphicon-edit sign_up",match: :first %>
          </li>
          <li>
            <%= link_to "login", new_user_session_path, class:"glyphicon glyphicon-log-in",match: :firstã€€%>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </header>
  <div class="container">
    <div class="body">
      <%= yield %>
    </div>
  </div>
  <footer>
    <div class="container">
      <div class="pull-right">CopyRight Infratop.inc</div>
    </div>
  </footer>
</body>

</html>